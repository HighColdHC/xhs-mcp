{
  "name": "xhs-mcp-desktop",
  "version": "0.1.0",
  "description": "Desktop shell for xiaohongshu-mcp (Electron)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable",
    "build:mac": "electron-builder --mac"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.xhs.mcp.desktop",
    "productName": "XHS MCP Desktop v1.0",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "icon_16.png",
      "icon_32.png",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../backend/xhs-mcp.exe",
        "to": "backend/xhs-mcp.exe",
        "filter": ["**/*"]
      },
      {
        "from": "vendor/chromium/chrome-win64",
        "to": "chromium/chrome-win64"
      },
      {
        "from": "../backend/xhs-mcp",
        "to": "backend/xhs-mcp",
        "filter": ["**/*"]
      },
      {
        "from": "vendor/chromium/chrome-mac",
        "to": "chromium/chrome-mac"
      }
    ],
    "win": {
      "target": "portable"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
